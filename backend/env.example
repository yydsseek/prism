# 服务器配置
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/prism
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# 阿里云短信服务配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your-alibaba-cloud-access-key-id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your-alibaba-cloud-access-key-secret
SMS_SIGN_NAME=Prism平台
SMS_TEMPLATE_REGISTER=SMS_123456789
SMS_TEMPLATE_LOGIN=SMS_123456790
SMS_TEMPLATE_RESET=SMS_123456791
SMS_TEMPLATE_CHANGE=SMS_123456792

# 邮件服务配置（可选，用于邮箱功能）
EMAIL_FROM=noreply@prism.com
EMAIL_FROM_NAME=Prism平台
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Stripe支付配置
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# 微信开放平台配置（可选）
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Redis配置（可选，用于缓存和会话）
REDIS_URL=redis://localhost:6379

# 其他配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary配置
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# 应用配置
APP_URL=http://localhost:3000
API_URL=http://localhost:4000 